{{#partial "title"}}
<title>{{title}}</title>
{{/partial}}
{{#partial "content"}}
<div class="ui main container">
    <div class="ui center aligned inverted segment">
        <h2 class="ui right floated header">Televisores</h2>
        <div class="ui clearing divider"></div>
        <button id="nuevo" class="blue fluid ui button">Nuevo Televisor</button>
        <div class="ui clearing divider"></div>
        <table id="televisores" class="ui center aligned celled structured table">
            
            <thead>
	        	<tr>
    	            <th class="ascending" colspan="1">#</th>
        	        <th colspan="1">IP</th>
        	        <th colspan="1">Acciones</th>
            	</tr>
            </thead>
            <tbody>
            	{{#each televisores}}
	            <tr>
    	            <td>{{this.tv_id}}</td>
        	        <td>{{this.ip_dir}}</td>
                    <td class="center aligned">
                        <button id="edit" class="ui edit icon button">
                            <i class="write icon"></i>
                        </button>
                        <button id="delete" class="ui delete icon button">
                            <i class="trash icon"></i>
                        </button>
                    </td>
    	        </tr>
    	        {{/each}}
            </tbody>
        </table>
    </div>
</div>
<div id="nuevo-modal" class="ui modal">
    <i class="close icon"></i>
        <div class="header">
            Nuevo Televisor
        </div>
        <div class="content">
            <form class="ui form">
                <div class="two fields">
                    <div class="field">
                        <label>IP</label>
                        <input name="ip_dir" placeholder="IP..." type="text">
                    </div>
                    
                    <div class="required field">
				  	 
				  	 	  <label>Ubicaciones</label>
						  <div class="ui selection dropdown">
							  <input type="hidden" name="ubicacion_id">
							  <i class="dropdown icon"></i>
							  <div class="default text">Ubicaciones</div>
							  <div class="menu">
							  
							  	{{#each ubicaciones}}
							  		<div class="item" data-value= {{this.ubicacion_id}} > {{this.ubicacion_id}} - {{this.descripcion}} </div>
				    	        {{/each}}
							    
							  </div>
						  </div>
					 </div>
					 
					 <div class="required field">
				  	 
				  	 	  <label>Camaras</label>
						  <div class="ui selection dropdown">
							  <input type="hidden" name="cam_id">
							  <i class="dropdown icon"></i>
							  <div class="default text">Camaras</div>
							  <div class="menu">
							  
							  	{{#each camaras}}
							  		<div class="item" data-value= {{this.cam_id}} > ID: {{this.cam_id}} - IP: {{this.ip_dir}} </div>
				    	        {{/each}}
							    
							  </div>
						  </div>
					 </div>

                </div>
            </form>
        </div>
        <div class="actions">
            <div class="ui black deny button">
                Cancelar
            </div>
            <div id="nuevo-button" class="ui positive right labeled icon button">
                Guardar
                <i class="checkmark icon"></i>
            </div>
        </div>
</div>
<div id="modificar-modal" class="ui modal">
    <i class="close icon"></i>
        <div class="header">
            Modificar Camara
        </div>
        <div class="content">
            <form class="ui form">
                <div class="two fields">
                    <div class="field">
                        <label>IP</label>
                        <input name="ip_dir" placeholder="IP..." type="text">
                    </div>
                </div>                
            </form>
        </div>
        <div class="actions">
            <div class="ui black deny button">
                Cancelar
            </div>
            <div id="modificar-button" class="ui positive right labeled icon button">
                Modificar
                <i class="checkmark icon"></i>
            </div>
        </div>
</div>

<script>
    $('.ui.checkbox').checkbox();
    var selectedId = null;
    
    $("#nuevo-button").click(function(){
        
        var ip_dir = $('#nuevo-modal').find('input[name=ip_dir]').val();
        var ubicacion_id = $('#nuevo-modal').find('input[name=ubicacion_id]').val();
        var cam_id = $('#nuevo-modal').find('input[name=cam_id]').val();
        
        $.ajax({
            url : "/televisores",
            method : "POST",
            data : {ip_dir: ip_dir, ubicacion_id: ubicacion_id, cam_id: cam_id},
            success : function(response){
                var json = JSON.parse(response);
                    $("#televisores > tbody").append("<tr><td>"+json.tv_id+"</td><td>"+json.ip_dir+"</td><td><button class='ui edit icon button'><i class='write icon'></i></button><button class='ui delete icon button'><i class='trash icon'></i></button></td>");
            }
        })
        
    });
    
    $("#nuevo").click(function(){
        $('#nuevo-modal').modal({
        }).modal('show');
    });
    
    $(".ui.delete.icon.button").click(function(){
        var id = $(this).parent().parent().find("td:first").text();
        
        $.ajax({
            url : "/televisores/" + id,
            method : "DELETE",
            success : function(response){
                $('#televisores tr:eq('+id+')').remove();
            }
        })
    });
    
    $(".ui.edit.icon.button").click(function(){
        
        var id = $(this).parents("tr").find("td").eq(0).text();
        selectedId = id;
        var ip_dir  = $(this).parents("tr").find("td").eq(1).text();
        
		$('#modificar-modal').modal({
                    onShow    : function(){
                        $('#modificar-modal').find('input[name=ip_dir]').val(ip_dir);
                    }
                }).modal('show');
    });
    
    $("#modificar-button").click(function(){
        var id = $(this).parent().parent().find("td:first").text();
        var ip_dir = $('#modificar-modal').find('input[name=ip_dir]').val();
        
        $.ajax({
            url : "/televisores/" + selectedId,
            method : "PUT",
            data : {ip_dir: ip_dir},
            success : function(response){
                var supplierSelector = "td:contains('"+ response.id + "')";
                $supplierRow = $(supplierSelector).closest("tr");
                $supplierRow.find("td:nth-child(2)").text(response.ip_dir);
            }
        })
    });
    
</script>
{{/partial}}
