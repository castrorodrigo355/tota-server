{{#partial "title"}}
<title>{{title}}</title>
{{/partial}}
{{#partial "content"}}
<div class="ui main container">
    <div class="ui center aligned inverted segment">
    
    	<h2 class="ui left floated header">Administradores</h2>
        <h2 class="ui right floated header">Usuarios</h2>
        
        <div class="ui clearing divider"></div>
        <button id="nuevo-admin" class="circular blue fluid ui button">Nuevo Administrador</button>
        <div class="ui clearing divider"></div>
        <button id="nuevo-user" class="circular red fluid ui button">Nuevo Usuario</button>
        <div class="ui clearing divider"></div>
        
        <table id="usuarios" class="ui inverted grey center aligned celled structured table">
            
            <thead>
	        	<tr>
    	            <th class="ascending" colspan="1">#</th>
        	        <th colspan="1">Nombre</th>
        	        <th colspan="1">Apellido</th>
            	    <th colspan="1">Password</th>
            	    <th colspan="1">Email</th>
                    <th colspan="1">Acciones</th>
            	</tr>
            </thead>
            <tbody>
            	{{#each usuarios}}
	            
	            	{{#if this.admin}}
	            			<tr bgcolor="#3333FF">
			    	            <td>{{this.user_id}}</td>
			        	        <td>{{this.nombre}}</td>
			        	        <td>{{this.apellido}}</td>
			            	    <td>{{this.password}}</td>
			            	    <td>{{this.email}}</td>
			                    <td class="center aligned">
			                        <button id="edit" class="ui edit icon button">
			                            <i class="write icon"></i>
			                        </button>
			                        <button id="delete" class="ui delete icon button">
			                            <i class="trash icon"></i>
			                        </button>
			                    </td>
			    	        </tr>    
	                {{else}}
	                		<tr bgcolor="FF0000">
			    	            <td>{{this.user_id}}</td>
			        	        <td>{{this.nombre}}</td>
			        	        <td>{{this.apellido}}</td>
			            	    <td>{{this.password}}</td>
			            	    <td>{{this.email}}</td>
			                    <td class="center aligned">
			                        <button id="edit" class="ui edit icon button">
			                            <i class="write icon"></i>
			                        </button>
			                        <button id="delete" class="ui delete icon button">
			                            <i class="trash icon"></i>
			                        </button>
			                    </td>
			    	        </tr>
	                {{/if}}
	            
	            
    	        {{/each}}
            </tbody>
        </table>
    </div>
</div>

<div id="nuevo-modal-user" class="ui modal">
    <i class="close icon"></i>
        <div class="header">
            Nuevo usuario
        </div>
        <div class="content">
            <form class="ui form">
                <div class="two fields">
                    <div class="field">
                        <label>Nombre</label>
                        <input name="nombre" placeholder="Nombres" type="text">
                    </div>
                    <div class="field">
                        <label>Apellido</label>
                        <input name="apellido" placeholder="Apellido" type="text">
                    </div>
                </div>
                <div class="three fields">
                    <div class="field">
                        <label>Password</label>
                        <input name="password" placeholder="Password" type="text">
                    </div>
                    <div class="field">
	                    <label>Correo electrónico</label>
	                    <input name="email" placeholder="ejemplo@smarketing.com" type="text">
	                </div>
	                <div class="field">
				  	 	  <label>Marcas</label>
						  <div class="ui selection dropdown">
							  <input type="hidden" name="marca_id">
							  <i class="dropdown icon"></i>
							  <div class="default text">Marcas</div>
							  <div class="menu">
							  
							  	{{#each marcas}}
							  		<div class="item" data-value= {{this.marca_id}} > {{this.marca_id}} - {{this.nombre}} </div>
				    	        {{/each}}
							    
							  </div>
						  </div>
					 </div>
                </div>
            </form>
        </div>
        <div class="actions">
            <div class="ui black deny button">
                Cancelar
            </div>
            <div id="nuevo-button-user" class="ui positive right labeled icon button">
                Guardar
                <i class="checkmark icon"></i>
            </div>
        </div>
</div>

