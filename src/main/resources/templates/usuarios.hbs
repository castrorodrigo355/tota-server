</div>

<div id="modificar-modal" class="ui modal">
    <i class="close icon"></i>
        <div class="header">
            Modificar usuario
        </div>
        <div class="content">
            <form class="ui form">
                <div class="two fields">
                    <div class="field">
                        <label>Nombre</label>
                        <input name="nombre" placeholder="Nombres" type="text">
                    </div>
                    <div class="field">
                        <label>Apellido</label>
                        <input name="apellido" placeholder="Apellido" type="text">
                    </div>
                </div>
                
                <div class="two fields">
                    <div class="field">
                        <label>Password</label>
                        <input name="password" placeholder="Password" type="text">
                    </div>
                    <div class="field">
	                    <label>Correo electrónico</label>
	                    <input name="email" placeholder="ejemplo@smarketing.com" type="text">
	                </div>
	                
                </div>
                
            </form>
        </div>
        <div class="actions">
            <div class="ui black deny button">
                Cancelar
            </div>
            <div id="modificar-button" class="ui positive right labeled icon button">
                Modificar
                <i class="checkmark icon"></i>
            </div>
        </div>
</div>

<script>
    $('.ui.checkbox').checkbox();
    var selectedId = null;
    
    $("#nuevo-user").click(function(){
        $('#nuevo-modal-user').modal({
        }).modal('show');
    });
    
    $("#nuevo-admin").click(function(){
        $('#nuevo-modal-admin').modal({
        }).modal('show');
    });
    
    $("#nuevo-button-user").click(function(){    
    
        var nombre = $('#nuevo-modal-user').find('input[name=nombre]').val();
        var apellido = $('#nuevo-modal-user').find('input[name=apellido]').val();
        var password = $('#nuevo-modal-user').find('input[name=password]').val();
        var email = $('#nuevo-modal-user').find('input[name=email]').val();
        var marca_id = $('#nuevo-modal-user').find('input[name=marca_id]').val();
        $.ajax({
            url : "/usuarios",
            method : "POST",
            data : {nombre: nombre, apellido: apellido, password: password, email: email, marca_id: marca_id},
            success : function(response){
                var json = JSON.parse(response);
                    $("#usuarios > tbody").append("<tr><td>"+json.user_id+"</td><td>"+json.nombre+"</td><td>"+json.apellido+"</td><td>"+json.password+"</td><td>"+json.email+"</td><td><button class='ui edit icon button'><i class='write icon'></i></button><button class='ui delete icon button'><i class='trash icon'></i></button></td>");
            }
        })    
    });
    
    $("#nuevo-button-admin").click(function(){    
        var nombre = $('#nuevo-modal-admin').find('input[name=nombre]').val();
        var apellido = $('#nuevo-modal-admin').find('input[name=apellido]').val();
        var password = $('#nuevo-modal-admin').find('input[name=password]').val();
        var email = $('#nuevo-modal-admin').find('input[name=email]').val();
        var marca_id = "";
        $.ajax({
            url : "/usuarios",
            method : "POST",
            data : {nombre: nombre, apellido: apellido, password: password, email: email, marca_id: marca_id},
            success : function(response){
                var json = JSON.parse(response);
                    $("#usuarios > tbody").append("<tr><td>"+json.user_id+"</td><td>"+json.nombre+"</td><td>"+json.apellido+"</td><td>"+json.password+"</td><td>"+json.email+"</td><td><button class='ui edit icon button'><i class='write icon'></i></button><button class='ui delete icon button'><i class='trash icon'></i></button></td>");
            }
        })    
    });
    
    $(".ui.delete.icon.button").click(function(){
    	var id = $(this).parent().parent().find("td:first").text();
    
        $.ajax({
            url : "/usuarios/" + id,
            method : "DELETE",
            success : function(response){
                $('#usuarios tr:eq('+id+')').remove();
            }
        })
    });
    
    $(".ui.edit.icon.button").click(function(){
        var id = $(this).parents("tr").find("td").eq(0).text();
        selectedId = id;
        var nombre  = $(this).parents("tr").find("td").eq(1).text();
        var apellido = $(this).parents("tr").find("td").eq(2).text();
        var password = $(this).parents("tr").find("td").eq(3).text();
        var email = $(this).parents("tr").find("td").eq(4).text();
        
		$('#modificar-modal').modal({
                    onShow    : function(){
                        $('#modificar-modal').find('input[name=nombre]').val(nombre);
                        $('#modificar-modal').find('input[name=apellido]').val(apellido);
                        $('#modificar-modal').find('input[name=password]').val(password);
                        $('#modificar-modal').find('input[name=email]').val(email);
                    }
                }).modal('show');
    });
    
    $("#modificar-button").click(function(){
        var id = $(this).parent().parent().find("td:first").text();
        var nombre = $('#modificar-modal').find('input[name=nombre]').val();
        var apellido = $('#modificar-modal').find('input[name=apellido]').val();
        var password = $('#modificar-modal').find('input[name=password]').val();
        var email = $('#modificar-modal').find('input[name=email]').val();
        
        $.ajax({
            url : "/usuarios/" + selectedId,
            method : "PUT",
            data : {nombre: nombre, apellido: apellido, password: password, email: email},
            success : function(response){
                var supplierSelector = "td:contains('"+ response.id + "')";
                $supplierRow = $(supplierSelector).closest("tr");
                $supplierRow.find("td:nth-child(2)").find("a").text(response.nombre + " " + response.apellido);
                $supplierRow.find("td:nth-child(3)").text(response.password);
                $supplierRow.find("td:nth-child(4)").text(response.email);
            }
        })
    });
    
</script>
{{/partial}}
