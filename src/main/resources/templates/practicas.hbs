{{#partial "title"}}
<title>{{title}}</title>
{{/partial}}
<div class="ui main container">
    
    <div class="ui center massive aligned segment">
    
    	<h2 class="ui right floated header">Combos</h2>
        
        <div class="content">
        
	        <form class="ui form">
				  
				  <div class="two fields">
				  	 <div class="required field">
						  <div class="ui selection dropdown">
							  <input type="hidden" name="sexo">
							  <i class="dropdown icon"></i>
							  <div class="default text">Usuarios</div>
							  <div class="menu">
							  
							  	{{#each listaDeUsuarios}}
							  		<div class="item" data-value={{this.id}}>{{this.email}}</div>
				    	        {{/each}}
							    
							  </div>
						  </div>
					 </div>	  
				  </div>
				  
				  <div class="two fields">
	                  
	                  <div class="required field">
 	    					<div class="ui selection dropdown">
							  <input type="hidden" name="edad_min">
							  <i class="dropdown icon"></i>
							  <div class="default text">Edad Minima</div>
							  <div class="menu">
							    <div class="item" data-value="1">1</div>
							    <div class="item" data-value="10">10</div>
							    <div class="item" data-value="20">20</div>
							    <div class="item" data-value="30">30</div>
							    <div class="item" data-value="40">40</div>
							    <div class="item" data-value="50">50</div>
							    <div class="item" data-value="60">60</div>
							    <div class="item" data-value="70">70</div>
							    <div class="item" data-value="80">80</div>
							    <div class="item" data-value="90">90</div>
							  </div>
  							</div>
				 	  </div>
				 	  
				 	  <div class="required field">
	    					<div class="ui selection dropdown">
							  <input type="hidden" name="edad_max">
							  <i class="dropdown icon"></i>
							  <div class="default text">Edad Maxima</div>
							  <div class="menu">
							    <div class="item" data-value="1">1</div>
							    <div class="item" data-value="20">20</div>
							    <div class="item" data-value="30">30</div>
							    <div class="item" data-value="40">40</div>
							    <div class="item" data-value="50">50</div>
							    <div class="item" data-value="60">60</div>
							    <div class="item" data-value="70">70</div>
							    <div class="item" data-value="80">80</div>
							    <div class="item" data-value="90">90</div>
							    <div class="item" data-value="100">100</div>
							  </div>
 							 </div>
				 	  </div>
				 	  
                  </div>

			</form>
		</div>
    
    </div>
    
    <div class="ui clearing divider"></div>
    
    <div class="ui center massive aligned segment">
    	
    	<h2 class="ui right floated header">Marcas</h2>
        
        <table id="usuarios" class="ui center aligned celled structured table">
            
            <thead>
	        	<tr>
    	            <th class="ascending" colspan="1">ID</th>
        	        <th colspan="1">Nombre</th>
        	        <th colspan="1">Descripcion</th>
        	        <th colspan="1">Usuarios</th>
            	</tr>
            </thead>
            <tbody>
            	{{#each listaDeMarcas}}
	            <tr>
    	            <td>{{this.id}}</td>
        	        <td>{{this.nombre}}</td>
        	        <td>{{this.descripcion}}</td>
        	        <td>
                        <div class="ui list">
                            {{#each this.usuarios}}
                            	<div class="item">ID: {{this.id}} - Email: {{this.email}}</div>
                            {{/each}}
                        </div>
                    </td>
    	        </tr>
    	        {{/each}}
            </tbody>
        </table>
        
    </div>
    
    <div class="ui clearing divider"></div>
    
    <div class="ui center massive aligned segment">
    	
    	<h2 class="ui right floated header">Usuarios</h2>
        
       <table id="usuarios" class="ui center aligned celled structured table">
            
            <thead>
	        	<tr>
    	            <th class="ascending" colspan="1">ID</th>
        	        <th colspan="1">Nombre</th>
        	        <th colspan="1">Apellido</th>
        	        <th colspan="1">Password</th>
            	    <th colspan="1">Email</th>
            	    <th colspan="1">Marca</th>
            	</tr>
            </thead>
            <tbody>
            	{{#each listaDeUsuarios}}
	            <tr>
    	            <td>{{this.id}}</td>
        	        <td>{{this.nombre}}</td>
        	        <td>{{this.apellido}}</td>
        	        <td>{{this.password}}</td>
            	    <td>{{this.email}}</td>
            	    <td>{{this.marca.id}}</td>
    	        </tr>
    	        {{/each}}
            </tbody>
        </table>
     
     </div>
    
</div>
	
{{#partial "content"}}
{{/partial}}
{{> layout.hbs}}